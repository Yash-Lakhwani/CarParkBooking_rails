
<% if user_signed_in? %>
<h1>My Bookings</h1>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Car model</th>
      <th>Location</th>
      <th>Date</th>
      <th>Hours</th>
      <th>Total cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>


    <% @bookings.each do |booking| %>
    <% if booking.user == current_user %>
      <tr>
        <td><%= booking.Car_Model %></td>
        <td><%= booking.Location %></td>
        <td><%= booking.date %></td>
        <td><%= booking.Hours %></td>
        <td><%= booking.Total_Cost %></td>
        <td><%= link_to 'Show',booking, class: "btn btn-outline-secondary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking), class: "btn btn-outline-secondary btn-sm" %></td>
        <td><%= link_to 'Delete', booking, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-outline-danger btn-sm"%></td>
      </tr>
        <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_booking_path, class:"btn btn-secondary" %>

<% else %>

<h1>Welcome to your  Car bookings </h1>
One place to see all your car bookings ...

<% end %>
